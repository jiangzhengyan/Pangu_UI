<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_pop_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_pop_main_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="取消"
                android:textColor="#333"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="确定"
                android:textColor="#333"
                android:textSize="17sp" />
        </LinearLayout>

        <View style="@style/gray_horizontal_line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_year"
                style="@style/style_date_title"
                android:text="年" />

            <TextView
                android:id="@+id/tv_month"
                style="@style/style_date_title"
                android:text="月" />

            <TextView
                android:id="@+id/tv_day"
                style="@style/style_date_title"
                android:text="日" />

            <TextView
                android:id="@+id/tv_hour"
                style="@style/style_date_title"
                android:text="时" />

            <TextView
                android:id="@+id/tv_min"
                style="@style/style_date_title"
                android:text="分" />

            <TextView
                android:id="@+id/tv_second"
                style="@style/style_date_title"
                android:text="秒" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <com.smart.pangu_ui_lib.widget.wheelview.view.WheelView
                android:id="@+id/wv_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.smart.pangu_ui_lib.widget.wheelview.view.WheelView
                android:id="@+id/wv_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <com.smart.pangu_ui_lib.widget.wheelview.view.WheelView
                android:id="@+id/wv_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <com.smart.pangu_ui_lib.widget.wheelview.view.WheelView
                android:id="@+id/wv_hour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <com.smart.pangu_ui_lib.widget.wheelview.view.WheelView
                android:id="@+id/wv_min"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <com.smart.pangu_ui_lib.widget.wheelview.view.WheelView
                android:id="@+id/wv_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>