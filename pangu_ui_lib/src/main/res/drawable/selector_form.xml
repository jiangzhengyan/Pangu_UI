<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="200" android:exitFadeDuration="200">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray_color" />
            <corners android:radius="4dp" />
            <stroke android:color="@color/gray_line_color" android:width="1dp"/>

        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>

            <corners android:radius="4dp" />
            <stroke android:color="@color/gray_line_color" android:width="1dp"/>

        </shape>
    </item>
</selector>