<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smart.pangu">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 相机权限 -->


    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.smart.pangu.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PanguInputViewActivity"/>
        <activity android:name=".activity.PanguNavActivity"/>
        <activity android:name=".activity.PanguSelectViewActivity"/>
        <activity android:name=".activity.PanguPopActivity"/>
        <activity android:name=".activity.WheelViewActivity"/>
        <activity android:name=".activity.PanguFlexboxActivity"/>
        <activity android:name=".activity.PanguRecyclerAdapterActivity"/>
        <activity android:name=".activity.FilePathActivity"/>
        <activity android:name=".activity.DateSelectActivity"/>
    </application>

</manifest>