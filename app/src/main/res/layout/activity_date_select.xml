<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.smart.pangu_ui_lib.widget.PanguNavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pangu_title_mid="时间选择框" />

    <View style="@style/gray_horizontal_line_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="1,时间格式年月日时分秒" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <com.smart.pangu_ui_lib.widget.PanguSelectDateView
                android:id="@+id/pg_date"
                android:layout_margin="18dp"
                app:pgsdate_hint_start="开始时间"
                app:pgsdate_hint_end="结束时间"
                app:pgsdate_must="true"
                app:pgsdate_select_mode="yyyy_MM_dd_HH_mm_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:pgsdate_title="选择出发时间" />

            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="2,单个日期" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <com.smart.pangu_ui_lib.widget.PanguSelectDateView
                android:id="@+id/pg_date2"
                android:layout_margin="18dp"
                app:pgsdate_hint_start="请选择时间"
                app:pgsdate_hint_end="结束时间"
                app:pgsdate_must="true"
                app:pgsdate_show_mode="singleDate"
                app:pgsdate_select_mode="yyyy_MM_dd_HH_mm_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:pgsdate_title="选择出发时间" />
            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="3,没有title" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <com.smart.pangu_ui_lib.widget.PanguSelectDateView
                android:id="@+id/pg_date3"
                android:layout_margin="18dp"
                app:pgsdate_hint_start="开始时间"
                app:pgsdate_hint_end="结束时间"
                app:pgsdate_must="true"
                app:pgsdate_show_title="gone"
                app:pgsdate_select_mode="yyyy_MM_dd_HH_mm_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:pgsdate_title="选择出发时间" />
            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="4,................更多,请查看demo" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
