<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.smart.pangu_ui_lib.widget.PanguNavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pangu_title_mid="文件存储filepathutil" />

    <View style="@style/gray_horizontal_line_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            style="@style/style_sub_item"
            android:layout_marginTop="18dp"
            android:text="1,手机内部存储(系统级)-" />

        <View
            style="@style/gray_horizontal_line_view"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp" />


        <TextView
            style="@style/style_sub_item"
            android:id="@+id/tv_1"
            android:textColor="#E32D2D"
            android:layout_marginTop="18dp"
            android:text="滚动布" />

        <TextView
            style="@style/style_sub_item"
            android:layout_marginTop="18dp"
            android:text="2,手机外部存储(自带存储或SD)" />

        <View
            style="@style/gray_horizontal_line_view"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp" />


        <TextView
            style="@style/style_sub_item"
            android:id="@+id/tv_2"
            android:textColor="#E32D2D"
            android:layout_marginTop="18dp"
            android:text="滚动布" />



    </LinearLayout>

    </ScrollView>
</LinearLayout>
