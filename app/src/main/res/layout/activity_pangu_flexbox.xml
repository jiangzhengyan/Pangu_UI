<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.smart.pangu_ui_lib.widget.PanguNavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pangu_title_mid="盘古flexbox" />

    <View style="@style/gray_horizontal_line_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="1,展示普通文本,自定义lable布局" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <com.smart.pangu_ui_lib.widget.PanguFlexBoxView
                android:layout_width="match_parent"
                android:id="@+id/pg_flex_box1"
                android:minHeight="50dp"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="2,展示普通文本,默认lable布局" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <com.smart.pangu_ui_lib.widget.PanguFlexBoxView
                android:layout_width="match_parent"
                android:id="@+id/pg_flex_box2"
                android:minHeight="50dp"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="3,展示RadioButton,可设置选择模式,单选,多选,至少选一个,最多选一个等模式,可配置默认选中,输入框" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <com.smart.pangu_ui_lib.widget.PanguFlexBoxView
                android:layout_width="match_parent"
                android:id="@+id/pg_flex_box3"
                app:flex_select_mode="multiple"
                android:minHeight="50dp"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/style_sub_item"
                android:layout_marginTop="18dp"
                android:text="4,展示CheckBox,可设置选择模式,单选,多选,至少选一个,最多选一个等模式,可配置默认选中,输入框" />

            <View
                style="@style/gray_horizontal_line_view"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <com.smart.pangu_ui_lib.widget.PanguFlexBoxView
                android:layout_width="match_parent"
                android:id="@+id/pg_flex_box4"
                app:flex_select_mode="multiple"
                android:minHeight="50dp"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </ScrollView>


</LinearLayout>